<form>
     <fieldset>
        <h3>Curent Quarterbacks</h3>

        <table style="width:100%">
            <tr>
                <th>Fullname</th>
                <th>School</th> 
                <th>Comp Ratio</th>
                <th></th>
            </tr>

            {{#each info}}
                <tr>
                    <td align="center">{{name}}</td>
                    <td align="center">{{school}}</td>
                    <td align="center"></td>
                    <td align="center"><a href='/detail/{{name}}'>View</a></td>
                    
                </tr>
            {{/each}}

        </table>

        <Button type="submit"><a href='/add'>Add a Quartback </Button>

   </fieldset>

    <style>
        table, th, td{
             border: 1px solid black;
        }  

        button{
            background-color: #008CBA;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            float: right;
        }
    </style>
</form>

